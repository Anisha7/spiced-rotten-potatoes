<!-- views/partials/comment.handlebars -->

<div class="card" id="{{response._id}}">
  <div class="card-block">
    <h4 class="card-title">{{this.title}}</h4>
    <p class="card-text">{{this.content}}</p>
    <!-- Delete link -->


    <button class="btn btn-link delete-comment" id="delete-comment" data-comment-id="{{this._id}}">Delete</button>
  </div>
</div>
